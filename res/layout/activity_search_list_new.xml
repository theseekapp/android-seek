<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#8d0c1e"
        android:padding="3sp">

        <Button
            android:id="@+id/b_close_main"
            android:layout_width="41dp"
            android:layout_height="fill_parent"
            android:background="@drawable/close" />

        <EditText
            android:id="@+id/et_main"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.03"
            android:background="#ffffffff"
            android:paddingLeft="5sp" />

        <Button
            android:id="@+id/b_mic_main"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:background="@drawable/voice" />

        <Button
            android:id="@+id/b_gen_main"
            android:layout_width="53dp"
            android:layout_height="fill_parent"
            android:background="@drawable/seek" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15sp">

        <TextView
            android:id="@+id/tv_start_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="start" />

        <SeekBar
            android:id="@+id/sb_search"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_end_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_stop_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="5sp"
            android:background="@drawable/stop_sel" />

        <Button
            android:id="@+id/b_play_search"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_margin="5sp"
            android:background="@drawable/play_sel" />

        <Button
            android:id="@+id/b_pause_search"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_margin="5sp"
            android:background="@drawable/pause_sel" />

        <Button
            android:id="@+id/b_correct_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="5sp"
            android:background="@drawable/correct_sel" />
    </LinearLayout>


    <ListView
        android:id="@+id/list_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


</LinearLayout>

